<form action="/auth/register" autocomplete="off" id="form1" method="post">    <div class="row">
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 col-md-12 required" for="Name">Name</label>
                <div class="col-12 col-md-12">
                    <input autocomplete="off" class="form-control text-box single-line"id="Name" name="name" type="text" value="" required />
                    <span class="field-validation-valid text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <div class="col-12 col-md-12">
                    <fieldset>
                        <legend class="required">Gender</legend>
                        <div class="row">
                            <div class="col-md-4">
                                <input data-val="true" data-val-required="Please select gender" id="Sex_M" name="sex" type="radio" value="M" required/>
                                <label for="Male">Male</label>
                            </div>
                            <div class="col-md-4">
                                <input id="Sex_F" name="sex" type="radio" value="F" />
                                <label for="Female">Female</label>
                            </div>
                            <div class="col-md-4">
                                <input id="Sex_O" name="sex" type="radio" value="O" />
                                <label for="Transgender">Transgender</label>
                            </div>
                        </div>
                    </fieldset>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Sex" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>
    </div>
              <div class="row">
                <div class="col-12 col-md-6">
                  <div class="form-group">
                    <label class="col-12 col-md-12 required" for="Address1">Address</label>
                    <div class="col-12 col-md-12">
                      <input type="text" name="Address1" placeholder="House Number or Name" autocomplete="off" class="form-control text-box single-line" id="Address1" required/>
                      <span class="field-validation-valid text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <div>
                    &nbsp;
                  </div>
                  <div class="form-group">
                    <div class="col-12 col-md-12">
                      <input type="text" name="Address2" autocomplete="off" class="form-control text-box single-line" placeholder="Sub-Locality" id="Address2" required />
                      <span class="field-validation-valid text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <div>
                        &nbsp;
                      </div>
                      <div class="col-12 col-md-12">
                        <input type="text" name="Address3" id="Address3" placeholder="Locality" autocomplete="off" class="form-control text-box single-line" required/>
                        <span class="field-validation-valid text-danger"></span>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                  <label class="col-12 col-md-12 required" for="Country">Country</label>
                  <div class="form-group">
                    <div class="col-12 col-md-12">
                      <input type="text" name="Country" placeholder="Enter Country" autocomplete="off" class="form-control text-box single-line" id="Country" required/>
                      <span class="field-validation-valid text-danger"></span>
                  </div>
                  </div>
                </div>
              </div>
              <div id="stateAndDistrict" class="row">
                <div class="col-12 col-md-6">
                  <div class="form-group">
                    <label class="col-12 col-md-12 required" for="State">State</label>
                    <div class="col-12 col-md-12">
                      <input type="text" name="state" placeholder="Enter State" autocomplete="off" class="form-control text-box single-line" id="State" required/>
                      <span class="field-validation-valid text-danger"></span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <label class="col-12 col-md-12 required" for="State">District</label>
                    <div class="col-12 col-md-12">
                      <input type="text" name="district" placeholder="Enter District" autocomplete="off" class="form-control text-box single-line" id="District" required/>
                      <span class="field-validation-valid text-danger"></span>
                    </div>
                </div>
              </div>
            </div>
            <div id="pincodeAndMobile" class="row">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <label class="col-12 col-md-12" for="Pincode">Pincode</label>
                  <div class="col-12 col-md-12">
                    <input type="text" name="Pincode" autocomplete="off" class="form-control text-box single-line" required/>
                    <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-6">
                <label class="col-12 col-md-12 required" for="MobileNo" >Mobile number</label>
                <div id="divDistrict" class="form-group">
                  <div class="col-12 col-md-12">
                    <input type="text" minlength="10" maxlength="10" name="mobileno" id="MobileNo" autocomplete="off" class="form-control text-box single-line" required />
                    <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <label class="col-12 col-md-12" for="PhoneNo">Phone number</label>
                  <div class="col-12 col-md-12">
                    <input type="tel" name="phoneno" class="form-control text-box single-line" placeholder="Phone number with STD code." autocomplete="off"/>
                    <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <label class="col-12 col-md-12 required" for="EmailAddress">E-mail address</label>
                  <div class="col-12 col-md-12">
                    <input type="email" name="email" autocomplete="off" class="form-control text-box single-line" required/>
                     <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <label class="col-12 col-md-12" for="password">Create Password</label>
                  <div class="col-12 col-md-12">
                    <input type="password" name="password" class="form-control text-box single-line" placeholder="Create Password" autocomplete="off" required/>
                    <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-6">
                <div class="form-group">
                  <label class="col-12 col-md-12" for="cpassword">Confirm Password</label>
                  <div class="col-12 col-md-12">
                    <input type="password" name="passwordconfirm" class="form-control text-box single-line" placeholder="Confirm Password" autocomplete="off"/ required>
                    <span class="field-validation-valid text-danger"></span>
                  </div>
                </div>
              </div>

              
            </div>
            <hr/>
            <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
    <label class="form-check-label" for="exampleCheck1"><b> I Have Read All The Terms And Conditions And Details Mentioned Above Are Best To My Knowledge</b></label>
  </div>
            <div class="row">
              <div class="offset-md-6 col-12 col-md-6">
