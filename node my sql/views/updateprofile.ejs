					<main role="main" class="col">
						<div class="card card-primary">
							<div class="card-header text-center" style="background-color: #037afb">
								<h3 class="card-title">Edit Profile</h3>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-md-6">
										<span class="pull-left text-primary"><strong>Enter Details</strong></span>
									</div>
									<div class="col-md-6 text-md-right">
										<span class="text-primary"><strong>Fields marked with <b class="text-danger">*</b>are mandatory</strong></span>	
									</div>
								</div>
								<div class="row">
									<div class="col">
										<hr/>
									</div>
								</div>
					<form action="/auth/updateprofile" autocomplete="off" id="form1" method="post">
						<div class="form-horizontal">

							<div class="form-group">
                    			<div class="row">
                        			<label class="col-md-4 text-right required" for="Name">Name<b class="text-danger">*</b></label>
                        				<div class="col-md-6">
                            
                            				<input autocomplete="off" class="form-control text-box single-line"id="Name" name="Name" readonly="readonly" type="text" value="<%=name%>"required/>
                            				<span class="field-validation-valid text-danger"></span>
                        				</div>
                    			</div>
                			</div>
                			<div class="form-group">
                    			<div class="row">
                        			<label class="col-md-4 text-right required" for="Sex">Gender<b class="text-danger">*</b></label>
                        				<div class="col-md-6">
                            				<div class="row">
                                				<div class="col-md-4">
                                    				<input <% if(sex==='M'){ %> checked="checked" <%}%> id="Sex" name="sex" type="radio" value="M" disabled />
                                    				<label for="Male">Male</label>
                                				</div>
                                				<div class="col-md-4">
                                    				<input  <% if (sex==='F') { %>checked="checked"  <%}%>  id="Sex" name="sex" r type="radio" value="F" disabled />
                                    				<label for="Female">Female</label>
                                				</div>
                                				<div class="col-md-4">
                                    				<input  <% if (sex==='0') { %>  checked="checked"  <%}%> id="Sex" name="sex"  type="radio" value="O" disabled />
                                    				<label for="Transgender">Transgender</label>
                               					</div>
                            				</div>
                            			<span class="field-validation-valid text-danger"></span>
                        			    </div>
                   					 </div>
                			</div>
                <div class="form-group">
                    <div class="row">
                       	<label class="col-md-4 text-right required" for="Country">Country<b class="text-danger">*</b></label>
       						<div class="col-md-6">
                     			<input autocomplete="off" class="form-control text-box single-line"id="Country" name="name" readonly="readonly" type="text" value="India"required/>
                            		<span class="field-validation-valid text-danger"></span>
                        	</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                       	<label class="col-md-4 text-right required" for="State">State<b class="text-danger">*</b></label>
       						<div class="col-md-6">
                     			<input autocomplete="off" class="form-control text-box single-line"id="State" name="state" type="text" value="<%=state%>"required/>
                            		<span class="field-validation-valid text-danger"></span>
                        	</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                       	<label class="col-md-4 text-right required" for="District">District<b class="text-danger">*</b></label>
       						<div class="col-md-6">
                     			<input autocomplete="off" class="form-control text-box single-line"id="District" name="district" type="text" value="<%=district%>" />
                            		<span class="field-validation-valid text-danger"></span>
                        	</div>
                    </div>
                </div>
                <div id="divPincode" class="form-group">
                    <div class="row">
                        <label class="col-md-4 text-right" for="Pincode">Pincode</label>
                        <div class="col-md-6">
                            <input autocomplete="off" class="form-control text-box single-line"id="Pincode" maxlength="6" name="pincode" type="text" value="" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label class="col-md-4 text-right required" for="Address1">Address<b class="text-danger">*</b></label>
                        <div class="col-md-6">
                            <input autocomplete="off" class="form-control text-box single-line"id="Address1" name="Address1" type="text" value=""required/>
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="offset-md-4 col-md-6">
                            <input autocomplete="off" class="form-control text-box single-line"id="Address2" name="Address2" type="text" value="" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="offset-md-4 col-md-6">
                            <input autocomplete="off" class="form-control text-box single-line"id="Address3" name="Address3" type="text" value="" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                        <div class="row">
                            <label class="col-md-4 text-right required" for="MobileNo">Mobile number<b class="text-danger">*</b></label>
                            <div class="col-md-5">
                                <input autocomplete="off" class="form-control text-box single-line" minlength="10" maxlength="10" name="mobileno" type="text" value="<%=mobileno%>" />
                                <span class="field-validation-valid text-danger"></span>
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                    <div class="row">
                        <label class="col-md-4 text-right required" for="EmailAddress">E-mail address<b class="text-danger">*</b></label>
                        <div class="col-md-5">
                            <input autocomplete="off" class="form-control text-box single-line"id="EmailAddress" name="email" type="email" readonly="readonly" value="<%=email%>" />
                            <span class="field-validation-valid text-danger"></span>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="offset-md-4 col-md-6">
                            <button type="submit" id="btnpop" class="btn btn-primary btn-social"><i class="fa fa-save"></i> Submit</button>
                        </div>
                    </div>
                </div>
										
									</div>
									
								</form>
								<% if(message) {%>
					
									<h4 class="alert alert-danger mt-4"><%=message%></h4>
														 <%}%>
							</div>
							
						</div>
						
