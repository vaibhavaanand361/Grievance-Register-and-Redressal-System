  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
	<div class="main">
		<!--************** Top Bar Starts *************-->
		<div class="topbar">
			<div class="container-fluid clearfix">
				<div class="tophead_left">
					<ul>
						<li class="gov">
							<span><h4><b>Mini-DBMS Project</b></h4></span>
						</li>
						<li class="ministry">
							<span><h5><b>System of Personnel & Public Grievances</b></h5></span>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<!--*************** Top Bar Ends ***************-->

		<!--*************** Logo Bar Starts ***************-->
		
		<div class="head">
			<div class="container-fluid clearfix">
				<div class="d-flex justify-content-between">
					<div class="logo">
						<a href=""><img src="/logo.png"alt="logo"></a>
					</div>
					<div class="title-main">
						<h2>CPGRAMS</h2>
						<span class="hidden-sm-down">Centralized Public Grievance Register And Monitoring System</span>
					</div>
				</div>
			</div>
		</div>
		<!--*************** Logo Bar Ends ***************-->
		
		<!--*************** Nav Bar Starts ***************-->
		
		<!--************ Nav Bar Ends ***********-->

		<!--************ Dashboard Starts ***********-->
		<div class="container-fluid pl-1 flex-grow-1">
			<div class="main-content innerPage h-100">
			<div class="container-fluid h-100">
				<div class="row h-100">
					<nav class="col-auto left_panel">
						<div class="sidebar-sticky">
							<ul class="nav flex-column">
								<li class="nav-item">
									<a class="nav-link active"href="/auth/returndashboard">
										<i class="fa fa-dashboard"></i><button type="submit" style="color: black">Dashboard</button><span class="sr-only">(current)</span>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link"href="/auth/organisation">
										<i class="fa fa-plus-square"></i><button type="submit">Lodge Public Grievance</button>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link"href="/auth/updateprofile">
										<i class="fa fa-edit"></i><button type="submit">Edit Profile</button>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link"href="">
										<i class="fa fa-lock"></i><form action="/auth/send" method="POST"><button>Change Password</button></form>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link"href="/auth/loan">
										<i class="fa fa-inr"></i><button type="submit">Loan Status</button>
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-warning" href=""><form action="/auth/logout" method="POST"><i class="fa fa-power-off"><button><strong></i>Sign out</button></strong>
									</form>
									</a>
								</li>
							</ul>
						</div>
					</nav>
					<!--*********** Dashboard Ends ***************-->
		<main role="main" class="col">
						<div class="card card-primary">
						    <div class="card-header text-center" style="background-color: #037afb">
						        <h4 class="card-title">Change Grievance Password</h4>
						    </div>

						    <div class="card-body">
						        <div class="row">
						            <div class="col">
						                <span class="text-primary"><strong>Enter Details</strong></span>
						            </div>
						            <div class="col text-md-right">
						                <span class="text-primary"><strong>Fields marked with <b class="text-danger">*</b> are mandatory</strong></span>
						            </div>
						        </div>
						        <div class="row">
						            <div class="col">
						                <hr />
						            </div>
						        </div>
						                <form action="/auth/changepassword" autocomplete="off" id="form1" method="post">
						                	<div class="form-horizontal">   
                                                <div class="form-group">
						                    <div class="row">
						                        <label class="col-md-4 text-right required" for="Password"><b>New Password</b><b class="text-danger">*</b></label>
						                        <div class="col-md-6">
						                            <input autocomplete="off" class="form-control text-box single-line" id="Password" name="password" type="password" value="" />
						                            <span class="field-validation-valid text-danger"></span>
						                        </div>
						                    </div>
						                </div>

						                <div class="form-group">
						                    <div class="row">
						                        <label class="col-md-4 text-right required" for="ConfirmPassword"><b>Confirm Password</b><b class="text-danger">*</b></label>
						                        <div class="col-md-6">
						                            <input autocomplete="off" class="form-control text-box single-line" id="ConfirmPassword" name="passwordconfirm" type="password" value="" />
						                            <span class="field-validation-valid text-danger"></span>
						                        </div>
						                    </div>
						                </div>

						                <div class="form-group">
						                    <div class="row">
						                        <div class="offset-md-4 col-md-6">
						                            <button type="submit" id="btnpop" class="btn btn-primary">Submit</button>
						                        </div>
						                    </div>
						                </div>
						            </div>
                        </form>
                      <% if(message){%>
<h4 class="alert alert-danger mt-4"><%=message%></h4>
                     <%}%>
						    </div>
						</div>

		        </main>
				</div>
			</div>
		</div>
	</div>
	<footer>
      <div class="footer-top">
            <div class="copyright">
                  <span>This site is designed, developed & hosted by Students of Information Technology Department owned by School of Engineering,CUSAT</span>
