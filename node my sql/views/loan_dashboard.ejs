                							<th>Status</th>
            							</tr>
            							</thead>
            							<tbody>
            								<% results1.forEach( function( items ) {  %>
												<tr>
													<td><%=++c%></td>
													<td><%=items.regno%></td>
													<td><%=items.date%></td>
													<td><%=items.catogery%></td>
													<td><%=items.status%></td>                     
